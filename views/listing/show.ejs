<% layout('/layouts/boilerplate') -%>
<body>
    <h3>Listing details:</h3>
    <ul>
        <li><%= lisiting.title %></li>
        <li><%= lisiting.description %></li>
        <li><%= lisiting.price.toLocaleString("en-IN") %></li>
        <li><%= lisiting.location %></li>
        <li><%= lisiting.country %></li>
    </ul>
    <br>
    <a href="/listings/<%= lisiting._id%>/edit">Edit this Listing</a>
    <br>
    <br>

    <form method="POST" action="/lisiting/<%= lisiting._id %>?_method=DELETE">
    <button type="submit">Delete</button>
</form>
