<% layout('/layouts/boilerplate') -%>
   <div class="row">
     
    <h3 class="offset-2">Listing details:</h3>
    <div class="card col-6 offset-2 show-card">
        <div class="card" >
            <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing">
            <div class="card-body">
              <ol>
                <p class="card-text fst-italic">
                    <b><%= listing.title %></b></p>
                    <%= listing.description %><br>
                    â‚¹ <%= listing.price.toLocaleString("en-IN") %><br>
                    <%= listing.location %><br>
                    <%= listing.country %><br>
              </ol>
                    
                </p>
            </div>
        </div>
    </div>
    <br />
   <div class="d-flex gap-3 offset-2">
  <!-- Delete Button -->
  <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
    <button class="btn btn-outline-danger" type="submit">Delete</button>
  </form>

  <!-- Edit Link -->
  <a href="/listings/<%= listing._id %>/edit" class="btn btn-outline-success">
    Edit
  </a>
</div>

</div>
<br>
<br>
</body>
    


   